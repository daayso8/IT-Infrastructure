server {
    listen 80 default_server;
    server_name _;

    {% if inventory_hostname in groups['db_servers'] %}

    location / {
        uwsgi_pass localhost:5000;
        include uwsgi_params;
    }
    location /grafana {
        deny all;
    }
    {% endif %}

    {% if inventory_hostname in groups['prometheus'] %}

    location /prometheus {
        proxy_pass http://localhost:9090;
    }
    location / {
        deny all;
    }
    {% endif %}

}