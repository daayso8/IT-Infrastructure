acl corpnets {
	{{ localnet }};
	{{ localhost }};
};
options {
	directory "/var/cache/bind";

	forwarders { 
		{% for ip in dnsforwarders %}
			{{ ip }};
		{% endfor %}
	};
	
   	allow-query { corpnets; };
	dnssec-validation no;
	recursion yes;
	empty-zones-enable yes;

};

statistics-channels {
    inet 127.0.0.1 port 8053 allow { 127.0.0.1; };
};